{
  // Credits: https://blog.logrocket.com/how-to-debug-node-js-apps-in-visual-studio-code/
  "version": "0.2.0",
  "configurations": [
      {
          "type": "pwa-node",
          "request": "launch",
          "outputCapture": "std",
          "name": "Launch Discord Bot",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "runtimeArgs": [
              "-r",
              "ts-node/register",
              "--loader",
              "ts-node/esm"
          ],
          "args": [
              "${workspaceFolder}/src/index.ts"
          ]
      }
  ]
}